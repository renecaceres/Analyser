define make-depend
cat /dev/null > $(DEP_DIR)/$3
makedepend -f $(DEP_DIR)/$3 -p $(OBJ_DIR)/ -w 156 -Y -- -I$(INC_DIR) -- $1 >& /dev/null
sed -e 's@$(INC_DIR)/@@g'                                                \
    -e 's@/$(SRC_DIR)/@/@'                                               \
    -e '/#.*/d'                                                           \
    -e '/^$$/d' $(DEP_DIR)/$3 > $(DEP_DIR)/$3.bak
sed -e 's/^[^:]*: *//'                                                    \
    -e 's/ *\\$$//'                                                       \
    -e 's/$$/:/' $(DEP_DIR)/$3.bak >> $(DEP_DIR)/$3.bak
mv $(DEP_DIR)/$3.bak $(DEP_DIR)/$3
endef


ifeq (,$(filter clean ,$(MAKECMDGOALS)))
-include $(SRC_DEP)
endif
